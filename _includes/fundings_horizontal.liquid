<div class="col mb-4">
  <a href="{% if funding.redirect %}{{ funding.redirect }}{% else %}{{ funding.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if funding.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=funding.img sizes="(min-width: 768px) 156px, 50vw" alt="funding thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if funding.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ funding.title }}</h3>
            <p class="card-text">
              <i>{{ funding.subtitle }}</i>
            </p>
            <p class="card-text">
              {{ funding.funder }}
              <br>
              {{ funding.start_date | date: '%b %Y' }}â€“{{ funding.end_date | date: '%b %Y' }}
            </p>
            <div class="row ml-1 mr-1 p-0">
              {% if funding.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ funding.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if funding.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ funding.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
